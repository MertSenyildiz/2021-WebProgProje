@model Entities.DTOs.UserForLoginDto

<div class="row">
    <div class="col-md-4">
        <section>
            <form asp-action="Login" asp-controller="Auth" id="basic-form">
                <h4>Use a local account to log in.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger">
                    @if(TempData["Error"]!=null)
                    { @TempData["Error"]; }
                </div>
                <div class="form-group">
                    <label type="email" asp-for="Email" for="Email" ></label>
                    <input asp-for="Email" class="form-control" required/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" ></label>
                    <input type="password" asp-for="Password" class="form-control" required/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>
                <a asp-controller="Home" asp-action="Register">Create an account</a>
            </form>
        </section>
    </div>
</div>